<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/atten"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.studentattendenceboard.StudentAttendence" >

    <Button
        android:id="@+id/internals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E6E6E6"
        android:layout_alignLeft="@+id/attendence"
        android:layout_alignRight="@+id/attendence"
        android:layout_below="@+id/attendence"
        android:layout_marginTop="31dp"
        android:text="Internals" />

    <Button
        android:id="@+id/dept"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gallary"
        android:layout_below="@+id/gallary"
        android:background="#E6E6E6"
        android:layout_marginTop="26dp"
        android:text="Departments" />

    <Button
        android:id="@+id/gallary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/internals"
        android:layout_alignRight="@+id/internals"
        android:layout_below="@+id/internals"
        android:background="#E6E6E6"
        android:layout_marginTop="32dp"
        android:text="Gallery" />

    <Button
        android:id="@+id/attendence"
       	android:background="@drawable/atten_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Welcome to Sarga Institute of Technologies"
        android:textColor="#FFA500"
        android:textSize="16sp" />

</RelativeLayout>
